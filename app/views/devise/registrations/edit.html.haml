%h2
  Edit #{resource_name.to_s.humanize}
= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => "form" }) do |f|
  = f.email_field_fieldset :email, :autofocus => true, :class => "form-control"
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div
      Currently waiting confirmation for: #{resource.unconfirmed_email}
  %i (leave blank if you don't want to change it)
  = f.password_field_fieldset :password, :autocomplete => "off", :class => "form-control"
  = f.password_field_fieldset :password_confirmation, :class => "form-control"
  %i (we need your current password to confirm your changes)
  = f.password_field_fieldset :current_password, :class => "form-control"
  = f.submit "Update", :class => "btn btn-default"
%h3 Cancel my account
%p
  Unhappy? #{button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete}
= link_to "Back", :back
