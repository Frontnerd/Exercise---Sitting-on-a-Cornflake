= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |form|
  = form.email_field_fieldset :email, :autofocus => true, :class => "form-control"
  = form.password_field_fieldset :password, :class => "form-control"
  = form.password_field_fieldset :password_confirmation, :class => "form-control"
  = form.submit :class => 'btn btn-default'


= render "devise/shared/links"

