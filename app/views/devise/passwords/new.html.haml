%h2 Forgot your password?
= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "form" }) do |f|
  = devise_error_messages!
  = f.email_field_fieldset :email, :autofocus => true, :class => "form-control"
  %div= f.submit "Send me reset password instructions", :class => "form-control btn btn-default"
= render "devise/shared/links"
