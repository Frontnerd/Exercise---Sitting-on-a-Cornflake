%h1 Listing ideas
%table#ideas.table.table-hover
  %thead
    %tr
      %th Name
      %th Description
      %th Picture
      %th Creator
      %th
      %th
      %th
  %tbody
    - @ideas.each do |idea|
      %tr{:id=> dom_id(idea)}
        %td= idea.name
        %td= idea.description
        %td= idea.attachment
        %td
          Posted By:
          = idea.user_id
        %td= link_to 'Show', idea
        %td= link_to 'Edit', edit_idea_path(idea)
        %td= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Idea', new_idea_path
